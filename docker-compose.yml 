version: '3.8'

services:
  redis:
    image: redis:7-alpine
    container_name: vk_assistant_redis
    restart: unless-stopped
    ports:
      - "6379:6379"
    volumes:
      - redis_data:/data
    command: redis-server --appendonly yes
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 5s
      timeout: 3s
      retries: 5

  bot:
    build: .
    container_name: vk_assistant_bot
    restart: unless-stopped
    depends_on:
      redis:
        condition: service_healthy
    env_file:
      - .env
    environment:
      - REDIS_URL=redis://redis:6379
    volumes:
      - ./data:/app/data
      - ./debug:/app/debug
      - ./.env:/app/.env
      - ./user_session.session:/app/user_session.session
    command: python bot_main.py

volumes:
  redis_data:
    driver: local